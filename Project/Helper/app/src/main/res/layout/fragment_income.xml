<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background20"
    >

    <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
        android:id="@+id/et_moenyinput"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="0.00"
        android:digits="0123456789."
        android:textColor="@color/green"
        android:layout_marginLeft="@dimen/config_margin_20dp"
        android:layout_marginRight="@dimen/config_margin_10dp"
        android:maxLines="1"
        android:maxLength="6"
        app:met_underlineHeight="2dp"
        app:met_underlineHeightFocused="3dp"
        app:met_allowEmpty="false"
        app:met_clearButton="true"
        app:met_underlineColor="@color/green"
        android:textSize="30dp"
        android:inputType="number|numberDecimal"
        android:textColorHint="@color/green"

        />


    <EditText
        android:id="@+id/et_moenyclass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/config_margin_20dp"
        android:layout_marginRight="@dimen/config_margin_10dp"
        android:maxLines="1"
        android:drawableLeft="@drawable/money_item_class"
        android:textSize="20dp"
        android:hint="分类"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="text"
        android:textColor="@color/green"
        android:textColorHint="@color/green"
        />

    <EditText
        android:id="@+id/et_moenytime"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/config_margin_20dp"
        android:layout_marginRight="@dimen/config_margin_10dp"
        android:maxLines="1"
        android:drawableLeft="@drawable/money_item_calender"
        android:textSize="20dp"
        android:hint="日期"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="text"
        android:textColor="@color/green"
        android:textColorHint="@color/green"
        />
    <EditText
        android:id="@+id/et_moenyinfo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/config_margin_20dp"
        android:layout_marginRight="@dimen/config_margin_10dp"
        android:drawableLeft="@drawable/money_item_info"
        android:hint="备注"
        android:maxLines="2"
        android:textSize="20dp"
        android:maxLength="50"
        android:inputType="text"
        android:textColor="@color/green"
        android:textColorHint="@color/green"
        />



</LinearLayout>