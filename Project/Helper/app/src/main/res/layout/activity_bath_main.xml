<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background25"

    >
    <com.xuexiang.xui.widget.actionbar.TitleBar
        android:id="@+id/batheTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tb_actionPadding="20dp"
        app:tb_barHeight="50dp"
        app:tb_titleText="浴室情况"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="@dimen/config_margin_20dp"
        android:text="请选择宿舍楼栋"
        android:textColor="@color/grey"
        android:textStyle="normal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_bath_area"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginRight="@dimen/config_margin_10dp"
            android:maxLines="1"
            android:textSize="20dp"

            android:text="东"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="text"
            android:textColor="@color/black"

            android:background="@color/grey"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/et_bath_id"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:digits="0123456789"
            android:textColor="@color/black"
            android:maxLines="1"
            android:maxLength="2"
            android:textSize="20dp"
            android:inputType="number|numberDecimal"
            android:text="1"
            android:background="@color/grey"

            />

        <Button
            android:id="@+id/ba_button"

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/config_margin_20dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:background="@color/grey"
            android:text="确定"/>

    </LinearLayout>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/bathchart"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_bili"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/green"
            android:text="可使用数/总数：10/20" />

    </LinearLayout>









</LinearLayout>